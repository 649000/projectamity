<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
android:id="@+id/resolveIndoorLayout"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:orientation="vertical"
xmlns:android="http://schemas.android.com/apk/res/android"
>
<TextView
android:id="@+id/resolveInDescriptionTitle"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:text="Description:"
android:textStyle="bold"
>
</TextView>
<EditText
android:id="@+id/resolveInDescriptionContent"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:textSize="18sp"
>
</EditText>
<TextView
android:id="@+id/resolveInStatusTitle"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:text="Status:"
android:textStyle="bold"
>
</TextView>
<EditText
android:id="@+id/resolveInStatusContent"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:textSize="18sp"
>
</EditText>
<TextView
android:id="@+id/resolveInImageTitle"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:text="Image:"
android:textStyle="bold"
>
</TextView>

<ImageView
android:id="@+id/resolveInImageContent"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content"
  />

<Button
android:id="@+id/resolveInCamera"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:text="Take A New Photo"
>
</Button>
<Button
android:id="@+id/resolveInSubmit"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:text="Submit"
>
</Button>
</LinearLayout>
