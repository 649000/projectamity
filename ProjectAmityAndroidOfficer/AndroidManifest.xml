        </activity>
        <activity android:name=".IndoorReportActivity" android:label="Indoor Report" android:screenOrientation="portrait">

        </activity>
        <activity android:name=".ResolveOutdoorActivity" android:label="Resolve Outdoor Report" android:screenOrientation="portrait">

        </activity>
        <activity android:name=".taboutdoor" android:label="Resolve Outdoor Report" android:screenOrientation="portrait">
        </activity>
        <activity android:name=".tabindoor" android:label="Resolve Indoor Report" android:screenOrientation="portrait">
        </activity>
        <activity android:name=".ResolveIndoorActivity" android:label="Resolve Indoor Report" android:screenOrientation="portrait">
        </activity>
        <service android:enabled="true" android:name=".GPSService" />
    </application>
</manifest>
