    <application android:debuggable="true">

        <uses-library android:name="com.google.android.maps" />
        <activity android:name=".LoginActivity" android:label="Project Amity Officer Application" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
