<?xml version="1.0" encoding="utf-8"?>
               
<LinearLayout
    android:id="@+id/resolveIndoorLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:scrollbars="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <com.google.android.maps.MapView
            android:id="@+id/Indoormapview"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:apiKey="0n5-yf_R2j1UOoka1jYxWJqO2jYQdKTJNn2OQSQ" />

        <ScrollView android:layout_width="fill_parent"
           android:layout_height="fill_parent"
           android:layout_weight="1"
           android:id="@+id/resolveIndoorLayoutwrapper">

           <LinearLayout
                android:id="@+id/resolveIndoorLayoutBottom"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:scrollbars="vertical"
                xmlns:android="http://schemas.android.com/apk/res/android">

                <TextView
                    android:id="@+id/IndoorTitleTitle"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Title:"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/IndoorTitleContent"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/IndoorDateTitle"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Date:"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/IndoorDateContent"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/IndoorDescriptionTitle"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Description:"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/IndoorDescriptionContent"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/IndoorPostalTitle"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Address:"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/IndoorPostalContent"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />
                <Button
                    android:id="@+id/indoorRemove"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </ScrollView>

</LinearLayout>